    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StarterActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_animacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Constraint Set+ Constraint Circular"
        app:layout_constraintBottom_toTopOf="@+id/btn_responsivo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_responsivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tela Responsiva"
        app:layout_constraintBottom_toTopOf="@id/btn_form"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_animacao"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
